<div class="statistics">
  <h1>5 Most Popular Items:</h1><br>
  <% @items.top_five_by_popularity.each do |item| %>
    <p><%= item.name %></p>
  <% end %>
  <h1>5 Least Popular Items:</h1><br>
  <% @items.bottom_five_by_popularity.each do |item| %>
    <p><%= item.name %></p>
  <% end %>
</div>

<% @merchants.each do |merchant| %>
  <% merchant.active_items.each do |item| %>
    <div id="item-<%= item.id %>">
      <%= link_to item.name, item_path(item) %>
      <a id="drink-pic" href="<%= item_path(item) %>"><img src="<%= item.image_url %>" alt="<% item.name %>"></a>
      Quantity: <%= item.inventory_qty %>
      Price: $<%= item.price %>
  <%= merchant.name %>
    </div>
  <% end %>
<% end %>
